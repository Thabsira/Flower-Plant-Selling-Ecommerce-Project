  <title>Stylish Login Page</title>
 
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body, html {
      height: 100%;
      font-family: 'Poppins', sans-serif;
    }
    body {
      background: url('https://images.unsplash.com/photo-1465146344425-f00d5f5c8f07?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8ZmxvcmFsJTIwYmFja2dyb3VuZHxlbnwwfHwwfHx8MA%3D%3D') no-repeat center center/cover;
      background-attachment: fixed;
    }
    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
     /* background-color: rgba(0, 0, 0, 0.6); /* Dark overlay */
    }
    .login-form {
      width: 100%;
      max-width: 400px;
      padding: 40px;
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.85), rgba(245, 245, 245, 0.85)); /* Soft gradient */
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2), 0 8px 15px rgba(0, 0, 0, 0.1); /* Shadow effect */
      backdrop-filter: blur(10px); /* Adds blur behind form */
      transition: transform 0.3s ease-in-out;
    }
    .login-form:hover {
      transform: scale(1.05); /* Subtle scale on hover */
    }
    .login-form h2 {
      text-align: center;
      margin-bottom: 30px;
      color: #333;
      font-weight: 600;
      letter-spacing: 1px;
    }
    .login-form label {
      display: block;
      font-size: 14px;
      color: #555;
      margin-bottom: 8px;
      letter-spacing: 0.5px;
    }
    .login-form input[type="email"],
    .login-form input[type="password"] {
      width: 100%;
      padding: 12px;
      font-size: 15px;
      border-radius: 8px;
      border: 1px solid #ccc;
      margin-bottom: 20px;
      outline: none;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }
    .login-form input[type="email"]:focus,
    .login-form input[type="password"]:focus {
      border-color: #0078cc;
      box-shadow: 0 0 8px rgba(0, 120, 204, 0.4); /* Glow effect */
    }
    .login-form button {
      width: 100%;
      padding: 14px;
      font-size: 16px;
      color: #333;
      background: linear-gradient(145deg, #d4e8f8, #a9d0ee); /* Light pastel gradient */
      border: none;
      border-radius: 8px;
      cursor: pointer;
      box-shadow: 0 5px 10px rgba(0, 120, 204, 0.2); /* Button shadow */
      transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }
    .login-form button:hover {
      background-color: #c3def4;
      box-shadow: 0 8px 15px rgba(0, 120, 204, 0.4);
    }
    .login-form .forgot-password {
      display: block;
      text-align: right;
      font-size: 13px;
      color: #0095ff;
      margin-top: -12px;
      margin-bottom: 20px;
      text-decoration: none;
    }
    .login-form .forgot-password:hover {
      text-decoration: underline;
    }
    /* Responsive Design */
    @media (max-width: 768px) {
      .login-form {
        padding: 30px;
      }
      .login-form h2 {
        font-size: 22px;
      }
    }

    .header {
            background-color: #f8f9fa;
            padding: 15px;
        }
        .header img {
            height: 40px;
        }
