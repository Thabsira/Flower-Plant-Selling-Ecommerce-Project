<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function validateForm() {
        const name = document.getElementById('name').value.trim();
        const couponCode = document.getElementById('couponCode').value.trim();
        const expireOn = document.getElementById('expireOn').value;
        const offerPrice = parseFloat(document.getElementById('offerPrice').value);
        const minimumPrice = parseFloat(document.getElementById('minimumPrice').value);

        // Validate coupon name
        if (!name) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Coupon name is required.',
            });
            return false;
        }

        // Validate expiry date
        const currentDate = new Date().toISOString().split('T')[0];
        if (expireOn < currentDate) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Expiry date must be in the future.',
            });
            return false;
        }

        // Validate offer price and minimum purchase price (must be positive numbers)
        if (offerPrice <= 0 || isNaN(offerPrice)) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Offer price must be a positive number.',
            });
            return false;
        }

        if (minimumPrice <= 0 || isNaN(minimumPrice)) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Minimum purchase price must be a positive number.',
            });
            return false;
        }

        // Validate that offer price does not exceed minimum purchase price
        if (offerPrice > minimumPrice) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Offer price cannot exceed the minimum purchase price.',
            });
            return false;
        }

        // All validations passed
        return true;
    }
</script>


