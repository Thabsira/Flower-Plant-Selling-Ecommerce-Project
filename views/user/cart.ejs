    .then(data => {
        console.log("Response data:", data);

        const row = document.querySelector(`tr[data-product-id="${productId}"]`);
        if (!row) {
            console.error("Row not found for product ID:", productId);
            return;
        }

        const quantityInput = row.querySelector('input[type="text"]');
