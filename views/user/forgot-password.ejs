<%- include("../../views/partials/user/header") %>

<style>
    /* Ensure the body and html take full viewport height */
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: 'Roboto', sans-serif;
    }

    /* Main container for centering form */
    .forgot-password-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px); /* Adjust this based on header and footer height */
        background-color: #f0f0f0;
        padding: 20px;
    }

    /* Form styling */
    .forgot-password-form {
        background-color: #fff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        max-width: 450px;
        width: 100%;
        text-align: center;
    }

    /* Form title styling */
    .forgot-password-form h2 {
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        color: #333;
        margin-bottom: 25px;
        font-size: 24px;
    }

    /* Form field styling */
    .form-control {
        border-radius: 25px;
        padding: 12px 20px;
        border: 1px solid #ccc;
        font-size: 16px;
        margin-bottom: 20px;
    }

    .form-control:focus {
        border-color:   #6df452;
        box-shadow: 0 0 5px rgba(226, 139, 62, 0.3);
    }

    /* Button styling */
    .btn-primar {
        background-color:  #6df452;
        border: none;
        border-radius: 25px;
        padding: 12px 40px;
        font-size: 16px;
        color: white;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color:  #6df452;
    }

    /* Back to login link */
    .back-to-login {
        margin-top: 20px;
    }

    .back-to-login a {
        color:  #6df452;
        font-weight: 600;
        text-decoration: none;
    }

    .back-to-login a:hover {
        color:  #60c84b;
    }

    /* Adjustments for small screen sizes */
    @media (max-width: 576px) {
        .forgot-password-form {
            padding: 30px;
        }

        /*.btn-primary {
            padding: 12px 30px;
        }*/

        .forgot-password-form h2 {
            font-size: 22px;
        }
    }
</style>

<body>
    <div class="forgot-password-container">
        <div class="forgot-password-form">
            <h2>Forgot Password?</h2>
            <form action="/forgot-email-valid" method="POST" id="forgotPasswordForm" onsubmit="return validateLoginForm()">
                <div class="form-group mb-3">
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email address" required>
                    <div class="invalid-feedback">Please provide a valid email address.</div>
                </div>
                <button type="submit" class="btn btn-primar">Verify</button>
            </form>
            <div class="back-to-login">
                <p>Remember your password? <a href="/login">Back to Login</a></p>
            </div>
        </div>
    </div>

    <%- include("../../views/partials/user/footer") %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Client-side validation script -->
    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', function (event) {
            var email = document.getElementById('email');
            if (!email.value || !email.validity.valid) {
                event.preventDefault();
                email.classList.add('is-invalid');
            } else {
                email.classList.remove('is-invalid');
            }
        });
    </script>





