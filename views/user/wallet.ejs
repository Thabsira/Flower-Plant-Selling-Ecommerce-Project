<%- include("../../views/partials/user/header") %>

<style>
     body {
        background: linear-gradient(to bottom right, #97b482, #e6f7ff);
        min-height: 100vh;
        margin: 0;
        font-family: 'Arial', sans-serif;
        color: #333;
        display: flex;
        flex-direction: column;
    } 
</style>

<div class="container-fluid min-vh-100 d-flex flex-column justify-content-between">
    <!-- Wallet Content -->
    <div class="container mt-5 mb-5 flex-grow-1">
        <div class="row justify-content-center" style="margin-top: 120px;">
            <div class="col-md-8">
                <div class="card p-4">
                    <h3 class="text-center mb-4">Wallet Balance: Rs. <%= balance %></h3>
                    
                    
                    <% if (transactions && transactions.length > 0) { %>
                        <table class="table table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Type</th>
                                    <th class="text-center">Amount</th>
                                    <th class="text-center">Description</th>
                                </tr>
                            </thead>
                            <h3>All Transactions</h3>
                           
                            <tbody>
                                <% transactions.forEach(transaction => { %>
                                    <tr>
                                        <td class="text-center"><%= new Date(transaction.date).toLocaleDateString() %></td>
                                        <td class="text-center"><%= transaction.type %></td>
                                        <td class="text-center">Rs. <%= transaction.amount.toFixed(2) %>
                                        </td>
                                        <td class="text-center"><%= transaction.description %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                     <!----   <button style="border-radius: 5px; border-style: none; background-color: #418510; color: aliceblue;">View All</button>--->
                     <a href="?view=<%= showAll ? '' : 'all' %>">
                        <button style="border-radius: 5px; background-color: #418510; color: aliceblue; border-style: none;"><%= showAll ? 'View Less' : 'View All' %></button>
                    </a>
                    <% } else { %>
                        <p class="text-center text-muted mt-4">No transactions available.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../../views/partials/user/footer") %>
